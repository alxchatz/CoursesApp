@page
@model CoursesApp.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "New Course";
}

<h2>New Course</h2>
@if (!string.IsNullOrWhiteSpace(Model.errorMessage)) {
    <p class="text-danger font-weight-bold">@Model.errorMessage</p>
}

<form method="post">

    <div class="row mb-3">
        <label for="description" class="col-md-1 col-form-label">Description:</label>
        <div>
            <input type="text" class="form-control" name="description" id="description" placeholder="Enter Description" 
            value=@Model.courseDTO.Description />
        </div>
    </div>

    <div class="row mb-3">
        <label for="teacherid" class="col-md-1 col-form-label">Teacher:</label>
        <div>
            <select class="form-select" name="teacherid" id="teacherid" value=@Model.courseDTO.TeacherId>
                <option disabled selected hidden>- Select Teacher -</option>
                @if (Model.teachersList is not null) {
                    @foreach (var teacher in Model.teachersList) {
                        <option value="@teacher.Value">@teacher.Text</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-md-1 col-md-11 text-end">
            <button type="submit" class="btn btn-primary btn-success">Submit</button>
            <a role="button" class="btn btn-primary btn-dark" href="/Courses/Index">Cancel</a>
        </div>
    </div>

</form>