@page
@model CoursesApp.Pages.Courses.UpdateModel
@{
    ViewData["Title"] = "Update Course";
}

<h2>Update Course</h2>
@if (!string.IsNullOrWhiteSpace(Model.errorMessage))
{
        <h2><strong>@Model.errorMessage</strong></h2>
}

<form method="post">

    <input type="hidden" class="form-control" name="Id" id="Id" value=@Model.courseDTO.Id />

    <div class="row mb-3">
        <label for="firstname" class="col-md-1 col-form-label">Description:</label>
        <div>
            <input type="text" class="form-control" name="description" id="description" placeholder="Enter Firstname"
                   value=@Model.courseDTO.Description />
        </div>
    </div>

    <div class="row mb-3">
        <label for="teacherid" class="col-md-1 col-form-label">Teacher:</label>
        <div>
            <select class="form-select" name="teacherid" id="teacherid" value=@Model.courseDTO.TeacherId>
                @if (Model.teachersList is not null)
                {
                    @foreach (var teacher in Model.teachersList)
                    {
                        <option value="@teacher.Value" selected="@(teacher.Value.ToString()==Model.courseDTO.TeacherId.ToString()?true:false)">@teacher.Text</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-md-1 col-md-11 text-end">
            <button type="submit" class="btn btn-primary btn-success">Submit</button>
            <a role="button" class="btn btn-primary btn-dark" href="/Courses/Index">Cancel</a>
        </div>
    </div>

</form>