@page
@model CoursesApp.Pages.StudentCourses.CreateModel
@{
    ViewData["Title"] = "New Student - Course";
}

<h2>New Student - Course</h2>
@if (!string.IsNullOrWhiteSpace(Model.errorMessage)) {
    <p class="text-danger font-weight-bold">@Model.errorMessage</p>
}

<form method="post">

    <div class="row mb-3">
        <label for="studentid" class="col-md-1 col-form-label">Student:</label>
        <div>
            <select class="form-select" name="studentid" id="studentid" value=@Model.studentCourseDTO.StudentId>
                <option disabled selected hidden>- Select Student -</option>
                @if (Model.studentsList is not null)
                {
                    @foreach (var student in Model.studentsList)
                    {
                        <option value="@student.Value">@student.Text</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label for="courseid" class="col-md-1 col-form-label">Course:</label>
        <div>
            <select class="form-select" name="courseid" id="courseid" value=@Model.studentCourseDTO.CourseId>
                <option disabled selected hidden>- Select Course -</option>
                @if (Model.coursesList is not null)
                {
                    @foreach (var course in Model.coursesList)
                    {
                        <option value="@course.Value">@course.Text</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-md-1 col-md-11 text-end">
            <button type="submit" class="btn btn-primary btn-success">Submit</button>
            <a role="button" class="btn btn-primary btn-dark" href="/StudentCourses/Index">Cancel</a>
        </div>
    </div>

</form>